@{
    ViewData["Title"] = "Resumo do seu lanche";

}

@model Lanche

    <h1>LANCHE CADASTRADO COM SUCESSO!</h1>

    <h3>@(Model.Nome)</h3>
    <h3>R$ @(Model.Valor)</h3>

<div class="row">
    <div class="col-md-12">
        <h3>Nº do Pedido: @(Model.Id_Lanche)</h3>
    </div>
</div>
<hr />
<div class="row">   
    

    <div class="col-md-6">
        <h3>Seu lanche contem: </h3>
        <div>
            @Model.Ingredientes.Pao
            - @Model.Ingredientes.Hamburguer
            - @Model.Ingredientes.Queijo
            - @Model.Ingredientes.Molho
            - @Model.Ingredientes._Alface
            - @Model.Ingredientes._Tomate
        </div>
    </div>

</div>

<hr />

